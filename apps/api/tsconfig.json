{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2023",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "strict": true,
    "types": ["node"],
    "paths": {
      "@repo/shared-types": ["../../packages/shared-types/dist"]
    }
  },
  "include": ["src"]
}
