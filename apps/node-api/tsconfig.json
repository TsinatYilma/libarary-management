{
    "compilerOptions": {
      "types": ["node"], 
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": [
      "server.ts",
      "routes/**/*.ts",
      "services/**/*.ts",
      "models/**/*.ts",
      "utils/**/*.ts",
      "config/**/*.ts",
      "types/**/*.d.ts"   // <--- include our manual types
    ]
  }
  